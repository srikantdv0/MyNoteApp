<h3>Reset Password</h3>
<EditForm Model="@resetPassword" OnValidSubmit="@OnValid" style="max-width:500px;">
    <DataAnnotationsValidator />
    <ValidationSummary />
        <div class="mb-2">
        <InputText type="password" class="form-control" @bind-Value="@resetPassword.password" placeholder="Password"></InputText>
    </div>
    <div class="mb-2">
        <InputText type="password" class="form-control" @bind-Value="@resetPassword.confirmpwd" placeholder="Confirm Password"></InputText>
    </div>
    <div class="mb-2 text-right">
        <button class="btn btn-secondary">Submit</button>
    </div>
</EditForm>
<p>@message</p>

